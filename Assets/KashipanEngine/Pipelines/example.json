{
	/* 各要素でプリセット作成時と同じ設定が可能だが、"Name" だけは無効 */

	// パイプラインの種類
	// "Render": レンダーパイプライン
	// "Compute": コンピュートパイプライン
	"PipeLineType": "Render",

	// 識別用の名前
	"Name": "Example Pipeline",
	// 使用するシェーダーの設定
	"Shader": {
		// "Vertex": 頂点シェーダー
		// "Pixel": ピクセルシェーダー
		// "Geometry": ジオメトリシェーダー
		// "Hull": ハルシェーダー
		// "Domain": ドメインシェーダー

		// ちなみにシェーダーにルートパラメーターを設定していた場合、
		// ルートパラメーターの並びは上記と同じ順番になる
		"Vertex": {
			// 事前に設定したプリセットを使用する場合は "UsePreset"を指定する
			// exampleプリセットを使用したかったが、このまま使うと恐らくエラーになるのでコメントアウト
			// "UsePreset": "example"
			"Path": "Resources/PipeLines/Preset/Shader/example/Vertex.hlsl",
			"TargetProfile": "vs_6_0",
			"InputLayout": {
				"Elements": [
					{
						"SemanticName": "POSITION",
						"SemanticIndex": 0,
						"Format": "DXGI_FORMAT_R32G32B32A32_FLOAT",
						"AlignedByteOffset": "D3D12_APPEND_ALIGNED_ELEMENT"
					}
				]
			}
		},
		"Pixel": {
			// ここで直に設定することも可能
			// 設定項目についてはShaderのexample.jsonを参照
			"Path": "Resources/PipeLines/Preset/Shader/example/Pixel.hlsl",
			"TargetProfile": "ps_6_0",
			"isReflection": true
			//"RootParameter": {
			//	// 設定の詳細はRootParameterのexampleを参照
			//	"Parameters": [
			//		{
			//			"ParameterType": "D3D12_ROOT_PARAMETER_TYPE_CBV",
			//			"ShaderVisibility": "D3D12_SHADER_VISIBILITY_PIXEL",
			//			"Descriptor": {
			//				"ShaderRegister": 0
			//			}
			//		}
			//	]
			//}
		}
	},
	"RootSignature": {
		// 設定項目についてはRootSignatureのexample.jsonを参照
		"Flags": "D3D12_ROOT_SIGNATURE_FLAG_ALLOW_INPUT_ASSEMBLER_INPUT_LAYOUT"
	},
	"RasterizerState": {
		// 設定項目についてはRasterizerStateのexample.jsonを参照
		"UsePreset": "example"
	},
	"BlendState": {
		// 設定項目についてはBlendStateのexample.jsonを参照
		"UsePreset": "example"
	},
	"DepthStencilState": {
		// 設定項目についてはDepthStencilStateのexample.jsonを参照
		"UsePreset": "example"
	},
	// パイプラインのステートオブジェクトを作成するための設定
	"PipelineState": {
		// 以下は設定が必須な項目
		"PrimitiveTopologyType": "D3D12_PRIMITIVE_TOPOLOGY_TYPE_TRIANGLE",
		"RTVFormats": [
			"DXGI_FORMAT_R8G8B8A8_UNORM_SRGB"
		],
		"DSVFormat": "DXGI_FORMAT_D24_UNORM_S8_UINT"

		// 以下は任意の項目
		// "SampleMask": "D3D12_DEFAULT_SAMPLE_MASK",
		// "IBStripCutValue": "D3D12_INDEX_BUFFER_STRIP_CUT_VALUE_DISABLED",
		// "NumRenderTargets": 1,
		// "SampleDesc": {
		// 		"Count": 1,
		// 		"Quality": 0
		//  }
		// "NodeMask": 0
		// "Flags": "D3D12_PIPELINE_STATE_FLAG_NONE"
	}
}